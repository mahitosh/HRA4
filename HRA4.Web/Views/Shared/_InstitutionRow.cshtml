                                <div class="col-sm-4"><input class="form-control" maxlength="4" /> </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Mobile Phone</label>
                            <div class="row phone-no-input">
                                <div class="col-sm-4"><input class="form-control" maxlength="3" /> </div>
                                <div class="col-sm-4"><input class="form-control" maxlength="3" /> </div>
                                <div class="col-sm-4"><input class="form-control" maxlength="4" /> </div>
                            </div>
                        </div>
                    </div>
                </div><!--row end-->
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Email Address</label>
                            <input class="form-control" />
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Appointment Physician</label>
                            <input class="form-control" />
                        </div>
                    </div>
                </div><!--row end-->
                <div class="row">
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Ref Phys</label>
                            <select class="form-control">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>PCP</label>
                            <select class="form-control">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Physician Name</label>
                            <select class="form-control">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-1">
                        <div class="form-group" style="margin-top:27px;">
                            <a href="#" class="add-row"><i class="fa fa-plus-circle fa-2x"></i></a>
                        </div>

                    </div>
                </div><!--row end-->
               
        </div><!--col-sm-12 end-->
    </div><!--row end-->
       
    </div><!--quick-add-links end-->
    <br />
    <div class="row">
        <div class="col-sm-12 align-right">
            <div class="form-group">
                <button id="btnSaveQuick" onclick="saveClinic();" class="pull-right btn btn-success btn-sm  Margin-L-10">Save</button>
                <button id="@Model.Id" class="pull-right btn btn-cancel btn-sm btnClear" onclick="cancel(this); return false;">Cancel</button>
            </div>
        </div><!--schedule-more-detail-content end-->
        </div>
    }
</div>



